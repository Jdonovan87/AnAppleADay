@model AnAppleADay_03.Models.ViewModels.WishlistDonations


<div class="container row">
    <div class="feature-box col-2-of-4">
        <div class="heading-list-details">

            <h2>Details</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <h4>WishlistDonations</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.listId)
                @Html.HiddenFor(model => model.itemName)
                @Html.HiddenFor(model => model.itemAbout)
                @Html.HiddenFor(model => model.cost)
                @Html.HiddenFor(model => model.current)
                @Html.HiddenFor(model => model.expDate)

                <div class="wrapper-wishlist-details">

                    <div class="box form-group">
                        Teacher Name:
                        <div>
                            @Model.Teacher.firstName @Model.Teacher.lastName
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.itemName)
                        <div>
                            @Html.DisplayFor(model => model.itemName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.itemAbout)
                        <div>
                            @Html.DisplayFor(model => model.itemAbout, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.cost)
                        <div>
                            @Html.DisplayFor(model => model.cost, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.current)
                        <div>
                            @Html.DisplayFor(model => model.current, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.expDate)
                        <div>
                            @Html.DisplayFor(model => model.expDate, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="box form-group">
                    @Html.LabelFor(model => model.donation, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.donation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.donation, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Donate" class="btn btn-default" />
                    </div>
                </div>

            }

        </div>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

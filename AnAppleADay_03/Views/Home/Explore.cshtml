<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<section id="explore-head-page">
    <div class="container">
        <div class="row">
            <div class="card-body bg-dark mt-5">
                <div class="col text-center py-5">
                    <h1 class="display-4">Explore</h1>
                    <p class="lead">
                        There are many teachers, possibly in your own community that need our help.
                        Come explore the various profiles of our teachers. Each with unique class rooms and unique challenges.
                        Simply pick a profile and choose from a list of much needed materials. Its so easy!
                    </p>
                    <p class="btn bg-dark btn-outline-secondary">@Html.ActionLink("Find Out More", "Explore", "Home")</p>
                </div>
            </div>
        </div>
    </div>
</section>


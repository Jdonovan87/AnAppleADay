@using AnAppleADay_03.Models
@model AnAppleADay_03.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<section class="head-section-explore">
    <div class="container">
        <div class="row">
            <div class="col text-center py-5">
                <h1 class="display-4 mt-3">Register</h1>
                <p class="lead">
                    Sign up and start making a differnece today!
                </p>
            </div>
        </div>
    </div>
</section>

<div>

    <h2>@ViewBag.Title.</h2>



    <div class="section-registration">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal text-left", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="wrapper-register container">
                <div class="box-register form-group">
                    <div>
                        @Html.LabelFor(m => m.firstName, new { @class = "control-label" })
                    </div>
                    @Html.EditorFor(m => m.firstName, new { @class = "form-control" })

                </div>

                <div class="box-register form-group">
                    @Html.LabelFor(m => m.lastName, new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(m => m.lastName, new { @class = "form-control" })
                    </div>

                </div>

                <div class="box-register form-group">
                    <div>
                        @Html.LabelFor(m => m.city, new { @class = "control-label" })
                    </div>
                    @Html.EditorFor(m => m.city, new { @class = "form-control" })

                </div>

                <div class="box-register form-group">
                    <div>
                        @Html.LabelFor(m => m.state, new { @class = " control-label" })
                    </div>
                    @Html.EditorFor(m => m.state, new { @class = "form-control" })

                </div>

                <div class="box-register form-group">
                    <div>
                        @Html.LabelFor(m => m.dob, new { @class = "control-label" })
                    </div>
                    @Html.EditorFor(m => m.dob, new { @class = "form-control" })

                </div>



                <!-- gender drop-down-->

                <div class="box-register form-group">

                    @Html.DropDownListFor(m => m.gender,
                        new SelectList(Enum.GetValues(typeof(AnAppleADay_03.Models.Gender))),
                        "Select Gender")
                </div>






                <div class="box-register form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="box-register form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="box-register form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="box-register form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
